<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <inset android:inset="15dp">
            <bitmap android:src="@drawable/ic_vibrate_on"/>
        </inset>
    </item> <!-- pressed -->
    <item android:state_checked="false">
        <inset android:inset="15dp">
            <bitmap android:src="@drawable/ic_vibrate_off"/>
        </inset>
    </item> <!-- focused -->
    <item android:drawable="@drawable/ic_vibrate_off" /> <!-- default -->
</selector>