<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <inset android:inset="15dp">
            <bitmap android:src="@drawable/ic_shuffle2_pressed"/>
        </inset>
    </item><!-- pressed -->
    <item android:state_checked="false">
        <inset android:inset="15dp">
            <bitmap android:src="@drawable/ic_shuffle2_normal"/>
        </inset>
    </item> <!-- focused -->
    <item android:drawable="@drawable/ic_shuffle2_normal" /> <!-- default -->
</selector>